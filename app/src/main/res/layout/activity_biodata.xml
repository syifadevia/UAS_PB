<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/ft"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".biodata">


    <ImageView
        android:id="@+id/dp"
        android:layout_width="254dp"
        android:layout_height="208dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/fts" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Syifa Devia "
        android:layout_gravity="center"
        android:textSize="25sp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="Sistem Informasi 5B 2017"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09031181722016"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lahir Tanggal 28 Oktober 1999 di Muaradua\n karna saya sangat suka menggunakan instagram, saya ingin membuat aplikasi pencarian dengan menggunakan user instagram itu sendiri,untuk mempersingkat waktu karna terkadang banyak akun yang hampir menyerupai\n by: syifadevia"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_margin="50dp"
        android:textColor="#000000"
        android:layout_gravity="center"/>


    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="#000"
        android:onClick="MainActivity"
        android:layout_below="@+id/quote"
        android:text="kembali" />

</LinearLayout>