<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gxix4"
    tools:context=".kenangan">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="15dp"
        android:onClick="MainActivity"
        android:text="back"
        android:textAlignment="center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:src="@drawable/hgj1"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"/>

            <ImageView
                android:id="@+id/tesklik"
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:src="@drawable/dfgh11"
                android:layout_gravity="center"
                android:layout_marginTop="16dp" />


            <ImageView
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:src="@drawable/dfgh6"
                android:layout_gravity="center"
                android:layout_marginTop="16dp" />

            <ImageView
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:src="@drawable/sdfghjk"
                android:layout_gravity="center"
                android:layout_marginTop="16dp" />

            <ImageView
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:src="@drawable/rtygj6"
                android:layout_gravity="center"
                android:layout_marginTop="16dp" />


            <ImageView
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:src="@drawable/cfgvhbn33"
                android:layout_gravity="center"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>